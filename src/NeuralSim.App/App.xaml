<Application x:Class="NeuralSim.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Global color palette -->
        <Color x:Key="PrimaryColor">#1E88E5</Color>
        <Color x:Key="AccentColor">#FF6F00</Color>
        <Color x:Key="BgDark">#1E1E2E</Color>
        <Color x:Key="BgMedium">#2D2D44</Color>
        <Color x:Key="BgLight">#3D3D5C</Color>
        <Color x:Key="TextPrimary">#E0E0E0</Color>
        <Color x:Key="TextSecondary">#A0A0B0</Color>
        <Color x:Key="NodeDefault">#3A3A5A</Color>
        <Color x:Key="NodeActive">#FF6F00</Color>
        <Color x:Key="NodeDone">#43A047</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="BgDarkBrush" Color="{StaticResource BgDark}" />
        <SolidColorBrush x:Key="BgMediumBrush" Color="{StaticResource BgMedium}" />
        <SolidColorBrush x:Key="BgLightBrush" Color="{StaticResource BgLight}" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
        <SolidColorBrush x:Key="NodeDefaultBrush" Color="{StaticResource NodeDefault}" />
        <SolidColorBrush x:Key="NodeActiveBrush" Color="{StaticResource NodeActive}" />
        <SolidColorBrush x:Key="NodeDoneBrush" Color="{StaticResource NodeDone}" />

        <!-- Button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
