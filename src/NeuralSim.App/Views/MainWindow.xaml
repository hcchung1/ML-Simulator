<Window x:Class="NeuralSim.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NeuralSim.App.ViewModels"
        xmlns:conv="clr-namespace:NeuralSim.App.Converters"
        xmlns:views="clr-namespace:NeuralSim.App.Views"
        Title="NeuralSim — ML Forward Pass Visualizer"
        Width="1400" Height="850"
        MinWidth="1000" MinHeight="600"
        Background="{StaticResource BgDarkBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <conv:StatusToBrushConverter x:Key="StatusToBrush" />
        <conv:BoolToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ═══ Top bar: step controls ═══ -->
        <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}" Padding="10,8">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="NeuralSim"
                           FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           VerticalAlignment="Center" Margin="0,0,20,0" />

                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="◀ Back" Command="{Binding StepBackwardCommand}" Margin="0,0,4,0" />
                    <Button Content="▶ Step" Command="{Binding StepForwardCommand}" 
                            Background="{StaticResource AccentBrush}" Margin="0,0,4,0" />
                    <Button Content="⏩ Run All" Command="{Binding RunToEndCommand}" Margin="0,0,4,0" />
                    <Button Content="↺ Reset" Command="{Binding ResetCommand}" Margin="0,0,16,0"
                            Background="{StaticResource BgLightBrush}" />
                </StackPanel>

                <TextBlock DockPanel.Dock="Left" 
                           Text="{Binding StepInfo}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center" FontSize="13"
                           TextTrimming="CharacterEllipsis" />

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentStep, StringFormat='Step {0}'}"
                               Foreground="{StaticResource TextPrimaryBrush}" FontSize="13"
                               Margin="0,0,4,0" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding TotalSteps, StringFormat='/ {0}'}"
                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"
                               VerticalAlignment="Center" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ═══ Main content: 3 columns ═══ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>

            <!-- ─── Left: Model Builder ─── -->
            <Border Grid.Column="0" Background="{StaticResource BgMediumBrush}" Margin="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12">
                        <TextBlock Text="Model Builder" FontSize="15" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12" />

                        <TextBlock Text="Layer Sizes (comma-separated)"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,4" />
                        <TextBox Text="{Binding LayerSizesText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{StaticResource BgLightBrush}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderThickness="0" Padding="8,6" FontSize="13" />

                        <TextBlock Text="Hidden Activation"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,10,0,4" />
                        <ComboBox ItemsSource="{Binding ActivationChoices}"
                                  SelectedItem="{Binding ActivationChoice}"
                                  FontSize="13" />

                        <TextBlock Text="Output Activation"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,10,0,4" />
                        <ComboBox ItemsSource="{Binding OutputActivationChoices}"
                                  SelectedItem="{Binding OutputActivationChoice}"
                                  FontSize="13" />

                        <TextBlock Text="Random Seed"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,10,0,4" />
                        <TextBox Text="{Binding Seed, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{StaticResource BgLightBrush}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderThickness="0" Padding="8,6" FontSize="13" />

                        <Separator Margin="0,16" Background="{StaticResource BgLightBrush}" />

                        <TextBlock Text="Input Vector (comma-separated)"
                                   Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,4" />
                        <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{StaticResource BgLightBrush}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderThickness="0" Padding="8,6" FontSize="13"
                                 TextWrapping="Wrap" AcceptsReturn="False" />

                        <Button Content="▶ Build &amp; Run" Margin="0,16,0,0"
                                Command="{Binding BuildAndRunCommand}"
                                Background="{StaticResource AccentBrush}"
                                FontSize="14" FontWeight="SemiBold"
                                Padding="12,10" />
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ─── Center: Graph Canvas ─── -->
            <Border Grid.Column="1" Background="{StaticResource BgDarkBrush}" Margin="2">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Nodes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Width="800" Height="1200" 
                                        Background="Transparent" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:OpNodeViewModel}">
                                <Border Background="{Binding Status, Converter={StaticResource StatusToBrush}}"
                                        CornerRadius="8" Padding="12,8" MinWidth="160"
                                        BorderBrush="{StaticResource BgLightBrush}" BorderThickness="1"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding Gesture="LeftClick"
                                                      Command="{Binding DataContext.SelectNodeCommand, 
                                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}" />
                                    </Border.InputBindings>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Label}"
                                                   Foreground="White" FontWeight="SemiBold" FontSize="13" />
                                        <TextBlock Text="{Binding OpType}"
                                                   Foreground="#B0B0C0" FontSize="11" Margin="0,2,0,0" />
                                        <TextBlock Text="{Binding OutputSummary}"
                                                   Foreground="#FFD54F" FontSize="11" Margin="0,4,0,0"
                                                   TextWrapping="Wrap" MaxWidth="200"
                                                   Visibility="{Binding OutputSummary, 
                                                       Converter={x:Static views:StringToVisConverter.Instance}}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- ─── Right: Inspector ─── -->
            <Border Grid.Column="2" Background="{StaticResource BgMediumBrush}" Margin="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12">
                        <TextBlock Text="{Binding InspectorTitle}" FontSize="15" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12" />

                        <TextBlock Text="{Binding InspectorContent}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontFamily="Consolas" FontSize="12"
                                   TextWrapping="Wrap" />

                        <Separator Margin="0,12" Background="{StaticResource BgLightBrush}"
                                   Visibility="{Binding HasTrace, Converter={StaticResource BoolToVis}}" />

                        <TextBlock Text="{Binding ParametersContent}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontFamily="Consolas" FontSize="11"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ═══ Status bar ═══ -->
        <Border Grid.Row="2" Background="{StaticResource BgMediumBrush}" Padding="10,4">
            <TextBlock Text="NeuralSim v0.1 — MLP Forward Pass Visualizer"
                       Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" />
        </Border>
    </Grid>
</Window>
